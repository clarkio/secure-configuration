<Window x:Class="Encryption.Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encrypt Configuration" Height="350" Width="525">
    <Grid>
        <Label Content="Encryption Utility" FontSize="30" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="File Path:" />
            <TextBox x:Name="InputFileTextBox" Width="400" Height="30" TextAlignment="Center"/>
            <Button Content="Browse" Click="Browse_Click"/>
        </StackPanel>
        <Button Content="Encrypt" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="Encrypt_Click"/>
        <Button Content="Create Key" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Click="CreateKey_Click"/>


    </Grid>
</Window>
